{
	"name": "@hive/monorepo",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/hive.git",
		"directory": "templates/node-ts"
	},
	"homepage": "https://github.com/killbasa/hive",
	"scripts": {
		"build": "pnpm -r run build",
		"check": "pnpm -r run check",
		"test": "pnpm -r run test",
		"docker:all": "docker compose -f compose.dev.yml",
		"docker:api": "docker buildx build -t killbasa/hive -f apps/api/Dockerfile .",
		"docker:web": "docker buildx build -t killbasa/hive-web -f apps/web/Dockerfile .",
		"clean": "rm -r node_modules && pnpm -r run clean"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.3",
		"@killbasa/prettier-config": "^1.0.0",
		"@killbasa/ts-config": "^1.0.0",
		"@types/node": "^20.12.10",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"typescript": "^5.4.5",
		"vitest": "^1.6.0"
	},
	"lint-staged": {
		"*.{cjs,js,ts}": ["pnpm biome check --apply \"**/*.{cjs,js,ts}\""],
		"*.{json,jsonc}": ["biome format --write \"**/*.{json,jsonc}\""],
		"*.{yml,yaml,md,html}": ["prettier --write --log-level=warn \"**/*.{yml,yaml,md,html}\""]
	},
	"engines": {
		"node": ">=20.x"
	},
	"packageManager": "pnpm@9.1.0",
	"volta": {
		"node": "22.1.0",
		"pnpm": "9.1.0"
	}
}
