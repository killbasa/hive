{
	"name": "hive-monorepo",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/hive.git",
		"directory": "templates/node-ts"
	},
	"homepage": "https://github.com/killbasa/hive",
	"scripts": {
		"build": "yarn workspaces foreach --all -p run build",
		"check": "yarn workspaces foreach --all -p run check",
		"lint": "yarn workspaces foreach --all -p run lint",
		"format": "yarn workspaces foreach --all -p run format",
		"dry-run": "yarn check && yarn lint && yarn format && yarn build",
		"docker:all": "docker compose -f compose.dev.yml",
		"docker:api": "docker buildx build -t killbasa/hive -f apps/api/Dockerfile .",
		"docker:backup": "docker buildx build -t killbasa/hive-backup -f apps/backup/Dockerfile .",
		"docker:chat": "docker buildx build -t killbasa/hive-chat -f apps/chat/Dockerfile .",
		"docker:web": "docker buildx build -t killbasa/hive-web -f apps/web/Dockerfile ."
	},
	"devDependencies": {
		"@killbasa/eslint-config": "^1.0.0",
		"@killbasa/prettier-config": "^1.0.0",
		"@killbasa/ts-config": "^1.0.0",
		"@types/node": "^20.11.30",
		"eslint": "^8.57.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"typescript": "^5.4.3",
		"vitest": "^1.4.0"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --log-level=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --log-level=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"engines": {
		"node": ">=20.x"
	},
	"packageManager": "yarn@4.1.1"
}
