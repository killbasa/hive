{
	"name": "monorepo",
	"version": "0.1.0",
	"author": "killbasa <git@killbasa.com>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/hive.git"
	},
	"homepage": "https://github.com/killbasa/hive",
	"scripts": {
		"bootstrap": "pnpm install && ./apps/api/scripts/deps.sh && pnpm build",
		"build": "turbo run build",
		"openapi": "turbo run openapi",
		"check": "turbo run check",
		"lint": "turbo run lint",
		"format": "turbo run format",
		"test": "turbo run test",
		"e2e": "turbo run e2e",
		"dry-run": "pnpm openapi && pnpm build && pnpm check && pnpm lint && pnpm format && pnpm test && pnpm e2e",
		"clean": "pnpm -r run clean && rm -rf node_modules"
	},
	"devDependencies": {
		"@hive/eslint-config": "workspace:^",
		"@killbasa/prettier-config": "^1.0.2",
		"@killbasa/ts-config": "^1.0.0",
		"@types/node": "^22.15.18",
		"eslint": "9.27.0",
		"lint-staged": "^16.0.0",
		"prettier": "^3.5.3",
		"turbo": "2.5.3",
		"typescript": "5.8.3",
		"vitest": "3.1.3"
	},
	"pnpm": {
		"overrides": {
			"vite": "6.3.5"
		},
		"onlyBuiltDependencies": [
			"@swc/core",
			"@tailwindcss/oxide",
			"argon2",
			"better-sqlite3",
			"esbuild",
			"msgpackr-extract",
			"protobufjs",
			"unrs-resolver",
			"vue-demi"
		]
	},
	"lint-staged": {
		"*.{js,cjs}": [
			"eslint --fix"
		],
		"*.{js,cjs,json,yml,yaml}": [
			"prettier --write --log-level=warn \"**/*.{js,cjs,json,yml,yaml}\""
		]
	},
	"engines": {
		"node": "24.x"
	},
	"packageManager": "pnpm@10.11.0",
	"volta": {
		"node": "24.0.1",
		"pnpm": "10.11.0"
	}
}
