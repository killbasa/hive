{
	"name": "hive",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"imports": {
		"#/*": "./dist/*.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/hive.git",
		"directory": "templates/node-ts"
	},
	"homepage": "https://github.com/killbasa/hive",
	"scripts": {
		"prepare": "husky",
		"build": "tsup",
		"check": "tsc",
		"start": "node --enable-source-maps dist/server.js",
		"dev": "tsup --watch --onSuccess \"yarn start\"",
		"lint": "eslint --fix --ext ts src tests && yarn check",
		"format": "prettier --write .",
		"test": "vitest --coverage --run",
		"dry-run": "yarn format && yarn lint && yarn build && yarn test"
	},
	"dependencies": {
		"@fastify/helmet": "^11.1.1",
		"@fastify/swagger": "^8.14.0",
		"@fastify/websocket": "^9.0.0",
		"dotenv": "^16.4.5",
		"fastify": "^4.26.1"
	},
	"devDependencies": {
		"@kbotdev/eslint-config": "^2.0.1",
		"@kbotdev/prettier-config": "^1.0.2",
		"@kbotdev/ts-config": "^1.0.2",
		"@swc/core": "^1.4.2",
		"@types/node": "^20.11.20",
		"@types/ws": "^8.5.10",
		"@vitest/coverage-istanbul": "^1.3.1",
		"eslint": "^8.57.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"pino-pretty": "^10.3.1",
		"prettier": "^3.2.5",
		"tsup": "^8.0.2",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3",
		"vitest": "^1.3.1"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --log-level=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --log-level=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"engines": {
		"node": ">=20.x"
	},
	"packageManager": "yarn@4.1.0"
}
