{
	"name": "@hive/web",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"files": [
		"dist",
		"static"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "pnpm sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"openapi": "openapi-typescript http://localhost:3001/spec.json -o ./src/api.d.ts",
		"clean": "rm -rf dist node_modules .svelte-kit"
	},
	"dependencies": {
		"@hive/common": "workspace:^",
		"@tabler/icons-svelte": "^3.5.0",
		"cron-parser": "^4.9.0",
		"openapi-fetch": "^0.9.7",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@hive/eslint-config": "workspace:^",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.5.10",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@types/node": "^20.12.12",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.11.1",
		"eslint": "^9.3.0",
		"openapi-typescript": "^6.7.6",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"svelte": "^4.2.17",
		"svelte-check": "^3.7.1",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.4.5",
		"vite": "^5.2.11"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"engines": {
		"node": ">=20.x"
	},
	"packageManager": "pnpm@9.1.2",
	"volta": {
		"node": "22.2.0",
		"pnpm": "9.1.2"
	}
}
