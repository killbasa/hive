{
	"name": "@hive/web",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"files": [
		"dist",
		"static"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "pnpm sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"openapi": "openapi-typescript ../api/openapi.json -o ./src/api.d.ts",
		"clean": "rm -rf dist node_modules .svelte-kit"
	},
	"dependencies": {
		"@hive/common": "workspace:^",
		"@tabler/icons-svelte": "^3.28.1",
		"@tanstack/table-core": "^8.20.5",
		"cron-parser": "^4.9.0",
		"openapi-fetch": "^0.13.4",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@hive/eslint-config": "workspace:^",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^22.10.7",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.0.0-next.76",
		"clsx": "^2.1.1",
		"daisyui": "^4.12.23",
		"eslint": "^9.18.0",
		"lucide-svelte": "^0.473.0",
		"openapi-typescript": "^7.5.2",
		"postcss": "^8.5.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.19.0",
		"svelte-check": "^4.1.4",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "5.7.3",
		"vite": "^6.0.7"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"engines": {
		"node": "22.x"
	},
	"packageManager": "pnpm@9.15.4",
	"volta": {
		"node": "22.13.0",
		"npm": "11.0.0",
		"pnpm": "9.15.4"
	}
}
