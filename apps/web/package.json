{
	"name": "@hive/web",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"files": [
		"dist",
		"static"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "pnpm sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"openapi": "openapi-typescript http://localhost:3001/spec.json -o ./src/api.d.ts",
		"clean": "rm -rf dist node_modules .svelte-kit"
	},
	"dependencies": {
		"@hive/common": "workspace:^",
		"@tabler/icons-svelte": "^3.26.0",
		"cron-parser": "^4.9.0",
		"openapi-fetch": "^0.13.3",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@hive/eslint-config": "workspace:^",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/kit": "^2.13.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^22.10.2",
		"autoprefixer": "^10.4.20",
		"daisyui": "^4.12.22",
		"eslint": "^9.17.0",
		"openapi-typescript": "^7.4.4",
		"postcss": "^8.4.49",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.15.0",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^3.4.17",
		"typescript": "5.7.2",
		"vite": "^6.0.5"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"engines": {
		"node": ">=20.x"
	},
	"packageManager": "pnpm@9.15.1",
	"volta": {
		"node": "22.12.0",
		"npm": "10.9.0",
		"pnpm": "9.15.1"
	}
}
