{
	"name": "@hive/web",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"files": [
		"dist",
		"static"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "pnpm sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"openapi": "openapi-typescript ../api/openapi.json -o ./src/api.d.ts",
		"clean": "rm -rf dist node_modules .svelte-kit"
	},
	"dependencies": {
		"@hive/common": "workspace:^",
		"@tabler/icons-svelte": "^3.30.0",
		"@tanstack/table-core": "^8.21.2",
		"cron-parser": "^5.0.0",
		"openapi-fetch": "^0.13.4",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@killbasa/eslint-config": "^3.0.2",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.17.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^22.13.4",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.1.0",
		"clsx": "^2.1.1",
		"daisyui": "^4.12.23",
		"eslint": "^9.20.1",
		"lucide-svelte": "^0.475.0",
		"openapi-typescript": "^7.6.1",
		"postcss": "^8.5.2",
		"prettier": "^3.5.1",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.20.1",
		"svelte-check": "^4.1.4",
		"tailwind-merge": "^3.0.1",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "4.0.6",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "5.7.3",
		"vite": "^6.1.0"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"engines": {
		"node": "22.x"
	},
	"packageManager": "pnpm@10.4.0",
	"volta": {
		"node": "22.14.0",
		"npm": "11.0.0",
		"pnpm": "10.4.0"
	}
}
