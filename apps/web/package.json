{
	"name": "@hive/web",
	"version": "0.1.0",
	"author": "killbasa <git@killbasa.com>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"exports": {
		"./plugin": {
			"types": "./dist/plugin.d.ts",
			"import": "./dist/plugin.js",
			"require": "./dist/plugin.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "pnpm sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"test": "vitest --coverage --run",
		"test:watch": "vitest --watch",
		"openapi": "turbo --filter @hive/api openapi && openapi-typescript ../api/openapi.json -o ./src/api.d.ts",
		"clean": "rm -rf ./.svelte-kit ./dist ./node_modules"
	},
	"dependencies": {
		"@hive/common": "workspace:^",
		"@lucide/svelte": "^0.507.0",
		"@sveltejs/kit": "^2.20.8",
		"cron-schedule": "^5.0.4",
		"openapi-fetch": "^0.13.5"
	},
	"devDependencies": {
		"@hive/adapter-fastify": "workspace:^",
		"@hive/eslint-config": "workspace:^",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "4.1.5",
		"@types/node": "^22.15.3",
		"@typescript-eslint/utils": "^8.31.1",
		"@vitest/coverage-v8": "3.1.2",
		"daisyui": "5.0.35",
		"eslint": "^9.26.0",
		"openapi-typescript": "^7.6.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.7",
		"tailwindcss": "4.1.5",
		"typescript": "5.8.3",
		"vite": "6.3.4"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"engines": {
		"node": "23.x"
	},
	"packageManager": "pnpm@10.10.0",
	"volta": {
		"node": "23.11.0",
		"pnpm": "10.10.0"
	}
}
