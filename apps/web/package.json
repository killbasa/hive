{
	"name": "@hive/web",
	"version": "0.1.0",
	"author": "killbasa <git@killbasa.com>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node --enable-source-maps dist/index.js",
		"sync": "svelte-kit sync",
		"check": "pnpm sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"test": "vitest --coverage --run",
		"test:watch": "vitest --watch",
		"openapi": "openapi-typescript ../api/openapi.json -o ./src/api.d.ts",
		"regen": "turbo --filter @hive/api run openapi && openapi-typescript ../api/openapi.json -o ./src/api.d.ts",
		"clean": "rm -rf ./.svelte-kit ./.turbo ./dist ./node_modules"
	},
	"dependencies": {
		"@fastify/static": "^8.1.1",
		"@hive/common": "workspace:^",
		"@lucide/svelte": "^0.511.0",
		"@sveltejs/kit": "^2.21.1",
		"cron-schedule": "^5.0.4",
		"openapi-fetch": "^0.14.0"
	},
	"devDependencies": {
		"@hive/eslint-config": "workspace:^",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "4.1.7",
		"@types/node": "^22.15.18",
		"@typescript-eslint/utils": "^8.32.1",
		"@vitest/coverage-v8": "3.1.3",
		"daisyui": "5.0.35",
		"eslint": "9.27.0",
		"openapi-typescript": "^7.8.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.30.2",
		"svelte-check": "^4.2.1",
		"tailwindcss": "4.1.7",
		"typescript": "5.8.3",
		"vite": "6.3.5",
		"vitest": "^3.1.3"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"engines": {
		"node": "24.x"
	},
	"packageManager": "pnpm@10.11.0",
	"volta": {
		"node": "24.0.2",
		"pnpm": "10.11.0"
	}
}
