{
	"name": "@hive/api",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"files": ["db", "dist"],
	"scripts": {
		"build": "tsc && NODE_ENV=development tsup",
		"build:prod": "tsc && tsup",
		"lint": "biome check --apply .",
		"start": "node --enable-source-maps dist/server.js",
		"test": "vitest --coverage --run",
		"test:watch": "vitest --coverage",
		"test:purge": "rm -r node_modules/.cache/hive",
		"dry-run": "pnpm lint && pnpm build && pnpm test",
		"generate": "drizzle-kit generate:sqlite",
		"flush": "redis-cli --pass password flushall",
		"reset": "pnpm flush && tsx scripts/reset.ts",
		"reset:videos": "tsx scripts/reset-videos.ts",
		"clean": "rm -r dist node_modules"
	},
	"dependencies": {
		"@fastify/cookie": "^9.3.1",
		"@fastify/cors": "^9.0.1",
		"@fastify/helmet": "^11.1.1",
		"@fastify/jwt": "^8.0.1",
		"@fastify/swagger": "^8.14.0",
		"@fastify/type-provider-typebox": "^4.0.0",
		"@fastify/websocket": "^10.0.1",
		"@hive/common": "workspace:^",
		"@opentelemetry/api": "^1.8.0",
		"@opentelemetry/exporter-prometheus": "^0.51.0",
		"@opentelemetry/sdk-node": "^0.51.0",
		"@opentelemetry/semantic-conventions": "^1.24.0",
		"@sinclair/typebox": "^0.32.29",
		"argon2": "^0.40.1",
		"better-sqlite3": "^9.6.0",
		"bullmq": "^5.7.8",
		"cron-parser": "^4.9.0",
		"drizzle-orm": "^0.30.10",
		"fast-xml-parser": "^4.3.6",
		"fastify": "^4.26.2",
		"pino-pretty": "^11.0.0",
		"redis": "^4.6.13",
		"zod": "^3.23.6"
	},
	"devDependencies": {
		"@swc/core": "1.4.17",
		"@types/better-sqlite3": "^7.6.10",
		"@types/ws": "^8.5.10",
		"@vitest/coverage-istanbul": "^1.6.0",
		"drizzle-kit": "^0.20.17",
		"tsup": "^8.0.2",
		"tsx": "^4.9.1",
		"typescript": "^5.4.5",
		"vitest": "^1.6.0"
	},
	"packageManager": "pnpm@9.0.6",
	"volta": {
		"node": "22.0.0",
		"pnpm": "9.0.6"
	}
}
