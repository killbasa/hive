{
	"name": "@hive/api",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"files": [
		"db",
		"dist/main.js",
		"dist/main.js.map",
		"static"
	],
	"scripts": {
		"build": "pnpm check && NODE_ENV=development tsup && pnpm openapi",
		"build:prod": "pnpm check && tsup",
		"start": "node --enable-source-maps dist/main.js",
		"check": "tsc",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"test": "vitest --project=unit --coverage --run",
		"test:watch": "vitest --project=unit --watch",
		"test:purge": "rm -rf node_modules/.cache/hive",
		"e2e": "vitest --project=e2e --coverage --run",
		"e2e:watch": "vitest --project=e2e --watch",
		"dry-run": "pnpm check && pnpm build && pnpm test",
		"generate": "drizzle-kit generate",
		"flush": "redis-cli --pass password flushall",
		"reset": "pnpm flush && tsx scripts/reset.ts",
		"reset:videos": "tsx scripts/reset-videos.ts",
		"reset:users": "tsx scripts/reset-users.ts",
		"openapi": "tsx scripts/gen.ts",
		"clean": "rm -rf dist node_modules"
	},
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^10.0.2",
		"@fastify/helmet": "^13.0.1",
		"@fastify/jwt": "^9.0.4",
		"@fastify/swagger": "^9.4.2",
		"@fastify/type-provider-typebox": "^5.1.0",
		"@fastify/websocket": "^11.0.2",
		"@hive/common": "workspace:^",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/exporter-prometheus": "^0.57.2",
		"@opentelemetry/sdk-node": "^0.57.2",
		"@opentelemetry/semantic-conventions": "^1.30.0",
		"@scalar/api-reference": "^1.25.118",
		"@sinclair/typebox": "^0.34.22",
		"argon2": "^0.41.1",
		"better-sqlite3": "^11.8.1",
		"bullmq": "^5.41.0",
		"cron-schedule": "^5.0.4",
		"drizzle-orm": "^0.39.3",
		"fast-xml-parser": "^4.5.1",
		"fastify": "^5.2.1",
		"pino-pretty": "^13.0.0",
		"redis": "^4.7.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@swc/core": "1.10.16",
		"@types/better-sqlite3": "^7.6.12",
		"@types/ws": "^8.5.14",
		"@vitest/coverage-v8": "3.0.5",
		"drizzle-kit": "^0.30.4",
		"eslint": "^9.20.1",
		"prettier": "^3.5.1",
		"tsup": "^8.3.6",
		"tsx": "^4.19.2",
		"typescript": "5.7.3",
		"vitest": "3.0.5"
	},
	"lint-staged": {
		"*.{js,cjs,ts}": [
			"eslint --fix"
		],
		"*.{js,cjs,ts,json,html,yml}": [
			"prettier --write --log-level=warn \"**/*.{js,cjs,ts,json,html,yml}\""
		]
	},
	"engines": {
		"node": "22.x"
	},
	"packageManager": "pnpm@10.4.0",
	"volta": {
		"node": "22.13.1",
		"npm": "11.0.0",
		"pnpm": "10.4.0"
	}
}
