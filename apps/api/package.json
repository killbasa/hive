		"bullmq": "^5.4.1",
		"drizzle-orm": "^0.29.4",
		"fast-xml-parser": "^4.3.5",
		"fastify": "^4.26.1",
		"pg": "^8.11.3",
		"pino-pretty": "^10.3.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@swc/core": "^1.4.2",
		"@types/pg": "^8.11.2",
		"@types/ws": "^8.5.10",
		"@vitest/coverage-istanbul": "^1.3.1",
		"drizzle-kit": "^0.20.14",
		"eslint": "^8.57.0",
