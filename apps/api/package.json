{
	"name": "@hive/api",
	"version": "0.1.0",
	"author": "killbasa <git@killbasa.com>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"files": [
		"db",
		"dist/main.js",
		"dist/main.js.map",
		"static"
	],
	"scripts": {
		"build": "pnpm check && NODE_ENV=development tsup",
		"build:prod": "pnpm check && tsup",
		"start": "node --enable-source-maps dist/main.js",
		"profile": "node --enable-source-maps --inspect dist/main.js",
		"check": "tsc",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"test": "vitest --project=unit --coverage --run",
		"test:watch": "vitest --project=unit --watch",
		"test:purge": "rm -rf node_modules/.cache/hive",
		"e2e": "vitest --project=e2e --coverage --run",
		"e2e:watch": "vitest --project=e2e --watch",
		"dry-run": "pnpm check && pnpm build && pnpm test",
		"generate": "drizzle-kit generate",
		"flush": "redis-cli --pass password flushall",
		"reset": "pnpm flush && tsx scripts/reset.ts",
		"reset:videos": "tsx scripts/reset-videos.ts",
		"reset:users": "tsx scripts/reset-users.ts",
		"openapi": "tsx scripts/gen.ts",
		"clean": "rm -rf ./.turbo ./dist ./node_modules"
	},
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.0.1",
		"@fastify/helmet": "^13.0.1",
		"@fastify/session": "^11.1.0",
		"@fastify/swagger": "^9.5.1",
		"@fastify/type-provider-typebox": "^5.1.0",
		"@fastify/websocket": "^11.0.2",
		"@hive/common": "workspace:^",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/exporter-prometheus": "^0.201.1",
		"@opentelemetry/sdk-node": "^0.201.1",
		"@opentelemetry/semantic-conventions": "^1.33.0",
		"@scalar/api-reference": "^1.28.34",
		"@scalar/types": "^0.1.16",
		"@sinclair/typebox": "^0.34.33",
		"argon2": "^0.43.0",
		"better-sqlite3": "^11.10.0",
		"bullmq": "^5.52.3",
		"cron-schedule": "^5.0.4",
		"drizzle-orm": "^0.43.1",
		"fast-xml-parser": "^5.2.3",
		"fastify": "^5.3.3",
		"ioredis": "^5.6.1",
		"pino-pretty": "^13.0.0",
		"zod": "^3.25.3"
	},
	"devDependencies": {
		"@killbasa/ts-config": "^1.0.0",
		"@swc/core": "1.11.24",
		"@types/better-sqlite3": "^7.6.13",
		"@types/ws": "^8.18.1",
		"@vitest/coverage-v8": "3.1.4",
		"drizzle-kit": "^0.31.1",
		"eslint": "9.27.0",
		"prettier": "^3.5.3",
		"tsup": "^8.5.0",
		"tsx": "^4.19.4",
		"typescript": "5.8.3",
		"vitest": "3.1.4"
	},
	"lint-staged": {
		"*.{js,cjs,ts}": [
			"eslint --fix"
		],
		"*.{js,cjs,ts,json,html,yml}": [
			"prettier --write --log-level=warn \"**/*.{js,cjs,ts,json,html,yml}\""
		]
	},
	"engines": {
		"node": "24.x"
	},
	"packageManager": "pnpm@10.11.0",
	"volta": {
		"node": "24.0.2",
		"pnpm": "10.11.0"
	}
}
