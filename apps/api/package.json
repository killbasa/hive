{
	"name": "hive",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "pnpm check && tsup",
		"check": "tsc",
		"start": "node --env-file .env --enable-source-maps dist/server.js",
		"dev": "tsup --watch --onSuccess \"pnpm start\"",
		"lint": "eslint --fix --ext ts src tests && pnpm check",
		"format": "prettier --write .",
		"test": "vitest --coverage --run",
		"dry-run": "pnpm format && pnpm lint && pnpm build && pnpm test",
		"generate": "drizzle-kit generate:sqlite",
		"flush": "redis-cli --pass password flushall"
	},
	"dependencies": {
		"@fastify/compress": "^7.0.2",
		"@fastify/cors": "^9.0.1",
		"@fastify/helmet": "^11.1.1",
		"@fastify/rate-limit": "^9.1.0",
		"@fastify/static": "^7.0.2",
		"@fastify/swagger": "^8.14.0",
		"@fastify/websocket": "^10.0.1",
		"better-sqlite3": "^9.4.3",
		"bullmq": "^5.4.6",
		"drizzle-orm": "^0.30.6",
		"fast-xml-parser": "^4.3.6",
		"fastify": "^4.26.2",
		"redis": "^4.6.13",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@swc/core": "^1.4.11",
		"@types/better-sqlite3": "^7.6.9",
		"@types/ws": "^8.5.10",
		"@vitest/coverage-istanbul": "^1.4.0",
		"drizzle-kit": "^0.20.14",
		"eslint": "^8.57.0",
		"pino-pretty": "^11.0.0",
		"prettier": "^3.2.5",
		"tsup": "^8.0.2",
		"typescript": "^5.4.3",
		"vitest": "^1.4.0"
	},
	"volta": {
		"node": "21.1.0"
	}
}
