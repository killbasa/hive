{
	"name": "@hive/api",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"files": [
		"db",
		"dist"
	],
	"scripts": {
		"build": "pnpm check && NODE_ENV=development tsup",
		"build:prod": "tsup",
		"check": "tsc",
		"start": "node --enable-source-maps dist/server.js",
		"dev": "tsup --watch --onSuccess \"pnpm start\"",
		"lint": "eslint --fix --ext .ts src && pnpm check",
		"format": "prettier --write .",
		"test": "vitest --coverage --run",
		"test:watch": "vitest --coverage",
		"test:purge": "rm -r node_modules/.cache/hive",
		"dry-run": "pnpm format && pnpm lint && pnpm build && pnpm test",
		"generate": "drizzle-kit generate:sqlite",
		"flush": "redis-cli --pass password flushall",
		"reset": "pnpm flush && tsx scripts/reset.ts",
		"reset:videos": "tsx scripts/reset-videos.ts"
	},
	"dependencies": {
		"@fastify/cookie": "^9.3.1",
		"@fastify/cors": "^9.0.1",
		"@fastify/helmet": "^11.1.1",
		"@fastify/jwt": "^8.0.0",
		"@fastify/rate-limit": "^9.1.0",
		"@fastify/swagger": "^8.14.0",
		"@fastify/type-provider-typebox": "^4.0.0",
		"@fastify/websocket": "^10.0.1",
		"@hive/common": "workspace:^",
		"@sinclair/typebox": "^0.32.28",
		"argon2": "^0.40.1",
		"better-sqlite3": "^9.6.0",
		"bullmq": "^5.7.8",
		"cron-parser": "^4.9.0",
		"drizzle-orm": "^0.30.10",
		"fast-xml-parser": "^4.3.6",
		"fastify": "^4.26.2",
		"redis": "^4.6.13",
		"zod": "^3.23.6"
	},
	"devDependencies": {
		"@hive/test-utils": "workspace:^",
		"@swc/core": "1.4.17",
		"@types/better-sqlite3": "^7.6.10",
		"@types/ws": "^8.5.10",
		"@vitest/coverage-istanbul": "^1.6.0",
		"drizzle-kit": "^0.20.17",
		"eslint": "^8.57.0",
		"pino-pretty": "^11.0.0",
		"prettier": "^3.2.5",
		"tsup": "^8.0.2",
		"tsx": "^4.9.0",
		"typescript": "^5.4.5",
		"vitest": "^1.6.0"
	},
	"packageManager": "pnpm@9.0.6",
	"volta": {
		"node": "22.0.0",
		"pnpm": "9.0.6"
	}
}
