{
	"name": "@hive/common",
	"version": "0.1.0",
	"author": "killbasa <git@killbasa.com>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts",
			"require": "./src/index.ts"
		}
	},
	"files": [
		"src/"
	],
	"scripts": {
		"check": "tsc",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"test": "vitest --coverage --run",
		"test:watch": "vitest --coverage",
		"clean": "rm -rf ./.turbo ./node_modules"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "3.1.3",
		"eslint": "9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"prettier": "^3.5.3",
		"typescript": "5.8.3",
		"vitest": "3.1.3"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix"
		],
		"*.{js,ts,json}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json}\""
		]
	},
	"engines": {
		"node": "24.x"
	},
	"volta": {
		"node": "24.0.2"
	}
}
