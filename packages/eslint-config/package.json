{
	"name": "@hive/eslint-config",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"main": "dist/cjs/index.cjs",
	"module": "dist/esm/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.cts",
				"default": "./dist/cjs/index.cjs"
			}
		},
		"./svelte": {
			"import": {
				"types": "./dist/esm/svelte.d.ts",
				"default": "./dist/esm/svelte.js"
			},
			"require": {
				"types": "./dist/cjs/svelte.d.cts",
				"default": "./dist/cjs/svelte.cjs"
			}
		}
	},
	"scripts": {
		"build": "tsup",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@eslint/js": "^9.18.0",
		"@typescript-eslint/eslint-plugin": "^8.21.0",
		"@typescript-eslint/parser": "^8.21.0",
		"@typescript-eslint/utils": "^8.21.0",
		"eslint": "^9.18.0",
		"eslint-import-resolver-typescript": "^3.7.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.3",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"svelte-eslint-parser": "^0.43.0",
		"typescript-eslint": "^8.21.0"
	},
	"devDependencies": {
		"tsup": "^8.3.5",
		"typescript": "^5.7.3"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix"
		],
		"*.{js,ts,json}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json}\""
		]
	},
	"engines": {
		"node": "22.x"
	},
	"packageManager": "pnpm@9.15.4",
	"volta": {
		"node": "22.13.0",
		"npm": "11.0.0",
		"pnpm": "9.15.4"
	}
}
